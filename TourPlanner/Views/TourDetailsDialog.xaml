<Window x:Class="TourPlanner.Views.TourDetailsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:TourPlanner.Views"
        xmlns:converter="clr-namespace:TourPlanner.Helper"
        mc:Ignorable="d"
        Title="Tour Details"
        Height="800" Width="1000"
        Background="AliceBlue">

    <Window.Resources>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3399CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Konverter -->
        <converter:PathConverter x:Key="PathConverter"/>
        <converter:TimeConverter x:Key="TimeConverter"/>
        <converter:SecondsConverter x:Key="SecondsConverter"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Tour Image -->
        <Border Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#CCCCCC" CornerRadius="10" Margin="5" Padding="5"
                DataContext="{Binding SelectedTour}" HorizontalAlignment="Center">
            <Image Height="300" Source="{Binding ImagePath, Converter={StaticResource PathConverter}, FallbackValue='https://via.placeholder.com/300x200.png'}" Stretch="UniformToFill"/>
        </Border>

        <!-- Tour Info -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10" DataContext="{Binding SelectedTour}">
            <TextBlock Text="{Binding Name}" FontSize="26" FontWeight="Bold" Margin="0,10"/>
            <TextBlock Text="{Binding From, StringFormat=From: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding To, StringFormat=To: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Transport, StringFormat=Transport: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Description, StringFormat=Description: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Distance, StringFormat=Distance: {0:F2} km}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Time, Converter={StaticResource SecondsConverter}, StringFormat=Time: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding Popularity, StringFormat=Popularity: {0}}" FontSize="16" Margin="0,5"/>
            <TextBlock Text="{Binding ChildFriendliness, StringFormat=Child Friendliness: {0}}" FontSize="16" Margin="0,5"/>
        </StackPanel>

        <!-- Tour Logs -->
        <DataGrid Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False" IsReadOnly="True"
                  ItemsSource="{Binding TourLogs}" SelectedItem="{Binding SelectedTourLog}"
                  Margin="10" FontSize="14">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Date/Time" Binding="{Binding Date, Converter={StaticResource TimeConverter}}"/>
                <DataGridTextColumn Header="Comment" Binding="{Binding Comment}"/>
                <DataGridTextColumn Header="Difficulty" Binding="{Binding Difficulty}"/>
                <DataGridTextColumn Header="Total Time" Binding="{Binding TotalTime, Converter={StaticResource SecondsConverter}}"/>
                <DataGridTextColumn Header="Rating" Binding="{Binding Rating}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Weather -->
        <view:WeatherView Grid.Row="1" Grid.Column="2" Margin="10" DataContext="{Binding Weather}" />

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Add Log" Command="{Binding AddLogCommand}" Width="100"/>
            <Button Content="Edit Log" Command="{Binding EditLogCommand}" Width="100"/>
            <Button Content="Delete Log" Command="{Binding DeleteLogCommand}" Width="100"/>
            <Button Content="Close" Command="{Binding CloseCommand}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>

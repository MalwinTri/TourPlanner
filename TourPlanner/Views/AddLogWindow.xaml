<Window x:Class="TourPlanner.Views.AddLogWindow"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="480" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Add Tour Log"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"
                   Grid.Row="0" />

        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <TextBlock Text="Date/Time:" Margin="0,5,0,2" FontWeight="Bold"/>
            <TextBox Text="{Binding DateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Difficulty:" Margin="0,5,0,2" FontWeight="Bold"/>
            <ComboBox SelectedItem="{Binding Difficulty, Mode=TwoWay}" Margin="0,0,0,10">
                <sys:String>Easy</sys:String>
                <sys:String>Medium</sys:String>
                <sys:String>Hard</sys:String>
            </ComboBox>

            <TextBlock Text="Distance (km):" Margin="0,5,0,2" FontWeight="Bold"/>
            <TextBox Text="{Binding Distance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Total Time (e.g. 1h 30m):" Margin="0,5,0,2" FontWeight="Bold"/>
            <TextBox Text="{Binding TotalTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Rating (1-5):" Margin="0,5,0,2" FontWeight="Bold"/>
            <TextBox Text="{Binding Rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10" />

            <TextBlock Text="Comment:" Margin="0,5,0,2" FontWeight="Bold"/>

            <ScrollViewer VerticalScrollBarVisibility="Visible" Height="80">
                <TextBox Text="{Binding Comment, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
             AcceptsReturn="True" 
             VerticalAlignment="Stretch"/>
            </ScrollViewer>

        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Height="40" Margin="5"/>
            <Button Content="Cancel" Width="80" Height="40" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="TourPlanner.Views.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:TourPlanner.Helper"
             xmlns:local="clr-namespace:TourPlanner.Views"
             Background="AliceBlue"
             MinWidth="300" MinHeight="250">

    <UserControl.Resources>
        <converter:PathConverter x:Key="PathConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Border BorderBrush="#3399CC" BorderThickness="1" CornerRadius="8" Padding="10" Margin="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" MinWidth="150"/>
                    <ColumnDefinition Width="1.5*" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                    <TextBlock Text="🌤 Weather" FontSize="20" FontWeight="Bold" Foreground="#3399CC" Margin="0,0,10,0"/>
                    <TextBlock Text="{Binding Location, FallbackValue='(at Destination)'}" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Bottom"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0">
                    <TextBlock Text="Description:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Description}" />

                    <TextBlock Text="Temperature:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Temperature}" />

                    <TextBlock Text="Precipitation:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Precipitation}" />

                    <TextBlock Text="Wind Speed:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding WindSpeed}" />

                    <TextBlock Text="Wind Direction:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding WindDirection}" />
                </StackPanel>

                <Image Grid.Row="1" Grid.Column="1"
                       Source="{Binding Icon, Converter={StaticResource PathConverter}}"
                       MaxWidth="100" MaxHeight="100"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
    </ScrollViewer>
</UserControl>

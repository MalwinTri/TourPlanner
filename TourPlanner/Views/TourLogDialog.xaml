<Window x:Class="TourPlanner.Views.TourLogDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding Usecase}" Height="520" Width="500"
        Background="AliceBlue"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3399CC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="10,20,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <StackPanel>
            <!-- Title -->
            <TextBlock Text="{Binding Usecase}" FontSize="22" FontWeight="Bold" Foreground="#3399CC" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Date:" FontWeight="SemiBold"/>
            <DatePicker SelectedDate="{Binding Date}" />

            <TextBlock Text="Comment:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding Comment}" AcceptsReturn="True" Height="60"/>

            <TextBlock Text="Difficulty:" FontWeight="SemiBold"/>
            <ComboBox SelectedValue="{Binding Difficulty}">
                <ComboBoxItem Content="Easy"/>
                <ComboBoxItem Content="Medium"/>
                <ComboBoxItem Content="Hard"/>
            </ComboBox>

            <TextBlock Text="Total Time (HH:MM:SS):" FontWeight="SemiBold"/>
            <TextBox Text="{Binding TotalTime}"/>

            <TextBlock Text="Rating:" FontWeight="SemiBold"/>
            <ComboBox SelectedValue="{Binding Rating}">
                <ComboBoxItem Content="Poor"/>
                <ComboBoxItem Content="Fair"/>
                <ComboBoxItem Content="Good"/>
                <ComboBoxItem Content="Very Good"/>
                <ComboBoxItem Content="Excellent"/>
            </ComboBox>

            <Button Content="{Binding Usecase}" Command="{Binding TourLogCommand}" HorizontalAlignment="Center" Width="150"/>
        </StackPanel>
    </Grid>
</Window>

<UserControl x:Class="TourPlanner.Views.TourDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Details" Style="{StaticResource HeaderStyle}"
                   Grid.ColumnSpan="2"/>


        <TextBlock Text="Name:" Style="{StaticResource LabelStyle}"
                   Grid.Row="1" Grid.Column="0"/>
        <TextBlock x:Name="tbName" Text="{Binding SelectedTour.Name}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="1" Grid.Column="1"/>


        <TextBlock Text="Description:" Style="{StaticResource LabelStyle}"
                   Grid.Row="2" Grid.Column="0"/>
        <TextBlock x:Name="tbdisc" Text="{Binding SelectedTour.Description}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="2" Grid.Column="1"/>


        <TextBlock Text="From:" Style="{StaticResource LabelStyle}"
                   Grid.Row="3" Grid.Column="0"/>
        <TextBlock x:Name="tbfrom" Text="{Binding SelectedTour.From}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="3" Grid.Column="1"/>


        <TextBlock Text="To:" Style="{StaticResource LabelStyle}"
                   Grid.Row="4" Grid.Column="0"/>
        <TextBlock x:Name="tbto" Text="{Binding SelectedTour.To}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="4" Grid.Column="1"/>


        <TextBlock Text="Transport Type:" Style="{StaticResource LabelStyle}"
                   Grid.Row="5" Grid.Column="0"/>
        <TextBlock x:Name="tbtrans" Text="{Binding SelectedTour.TransportType}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="5" Grid.Column="1"/>


        <TextBlock Text="Distance:" Style="{StaticResource LabelStyle}"
                   Grid.Row="6" Grid.Column="0"/>
        <TextBlock x:Name="tbdistance" Text="{Binding SelectedTour.Distance}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="6" Grid.Column="1"/>


        <TextBlock Text="Estimated Time:" Style="{StaticResource LabelStyle}"
                   Grid.Row="7" Grid.Column="0"/>
        <TextBlock x:Name="tbestimated" Text="{Binding SelectedTour.EstimatedTime}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="7" Grid.Column="1"/>


        <TextBlock Text="Route Information:" Style="{StaticResource LabelStyle}"
                   Grid.Row="8" Grid.Column="0"/>
        <TextBlock x:Name="tbroute" Text="{Binding SelectedTour.RouteInformation}"
                   Style="{StaticResource ValueStyle}"
                   Grid.Row="8" Grid.Column="1"/>


        <Border Grid.Row="1"
                Grid.Column="2"
                Grid.RowSpan="8"
                Margin="10"
                Background="#e0e0e0"
                BorderBrush="Black"
                BorderThickness="1">
            <Image Source="pack://application:,,,/Picture/Tour.jpeg" Stretch="Uniform" Height="600" />
        </Border>
    </Grid>
</UserControl>

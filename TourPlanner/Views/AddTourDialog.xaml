<Window x:Class="TourPlanner.Views.AddTourDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="New Tour" Height="450" Width="300"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5,0,20,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#58729e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#58729e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5,0,20,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <StackPanel>
            <Label Content="Add new Tour" FontSize="24" FontWeight="Bold" Foreground="#58729e" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Label Content="Name:"/>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Tour Description:"/>
            <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="From:"/>
            <TextBox Text="{Binding From, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="To:"/>
            <TextBox Text="{Binding To, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Transport Type:"/>
            <ComboBox SelectedItem="{Binding Transport, Mode=TwoWay}">
                <ComboBoxItem Content="Car"/>
                <ComboBoxItem Content="Walking"/>
                <ComboBoxItem Content="Bike"/>
            </ComboBox>

            <Button Content="Add Tour" Command="{Binding AddTourCommand}" HorizontalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
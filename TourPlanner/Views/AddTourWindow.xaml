<Window x:Class="TourPlanner.Views.AddTourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="New Tour" Height="750" Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Background" Value="#58729e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#58729e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="100"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Add New Tour" FontSize="24" FontWeight="Bold" Foreground="#58729e" Margin="0,0,0,20" TextAlignment="Center"/>

                <Label Content="Name"/>
                <TextBox Text="{Binding Name}" />

                <Label Content="Tour Description"/>
                <TextBox Text="{Binding Description}" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="200">
                        <Label Content="From"/>
                        <TextBox Text="{Binding From}" />
                    </StackPanel>
                    <StackPanel Width="200" Margin="20,0,0,0">
                        <Label Content="To"/>
                        <TextBox Text="{Binding To}" />
                    </StackPanel>
                </StackPanel>

                <Label Content="Transport Type"/>
                <ComboBox SelectedItem="{Binding TransportType}">
                    <sys:String>Car</sys:String>
                    <sys:String>Bicycle</sys:String>
                    <sys:String>Walking</sys:String>
                    <sys:String>Train</sys:String>
                </ComboBox>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Width="200">
                        <Label Content="Tour Distance (km)"/>
                        <TextBox Text="{Binding Distance}" />
                    </StackPanel>
                    <StackPanel Width="200" Margin="20,0,0,0">
                        <Label Content="Estimated Time"/>
                        <TextBox Text="{Binding EstimatedTime}" />
                    </StackPanel>
                </StackPanel>

                <Label Content="Route Information"/>
                <TextBox Text="{Binding RouteInformation}" Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <Label Content="Tour Image"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Upload Image" Command="{Binding UploadImageCommand}" />
                    <TextBlock Text="{Binding ImagePath}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </StackPanel>

                <Image Source="{Binding ImagePreview}" Height="200" Margin="0,10,0,0"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Cancel" Command="{Binding CancelCommand}" Background="#999" BorderBrush="#999"/>
                    <Button Content="Create" Command="{Binding SaveCommand}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>

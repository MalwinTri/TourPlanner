<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TourPlanner.Views"
        Title="Tour Planner"
        Width="1200" Height="800"
        Background="AliceBlue">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />

        <Style TargetType="Button">
            <Setter Property="Background" Value="#3399CC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>

        <!-- Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Import" Command="{Binding ImportCommand}"/>
                <MenuItem Header="_Export" Command="{Binding ExportCommand}"/>
                <Separator />
                <MenuItem Header="_Report" Command="{Binding ReportCommand}"/>
                <MenuItem Header="_Summary" Command="{Binding SummaryCommand}" />
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Add Tour" Command="{Binding ShowAddTourDialog}"/>
                <MenuItem Header="Edit Tour" Command="{Binding ShowEditTourDialog}"/>
                <MenuItem Header="Delete Tour" Command="{Binding DeleteTour}"/>
            </MenuItem>
        </Menu>

        <!-- Main Layout Grid -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Search Bar -->
            <views:SearchView Grid.Column="2" Grid.Row="0" Grid.ColumnSpan="3" />

            <!-- Left Menu -->
            <ScrollViewer Grid.Column="0" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <views:TourMenuView />
            </ScrollViewer>

            <!-- Center: Tour List -->
            <ScrollViewer Grid.Column="2" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <views:TourListView />
            </ScrollViewer>

            <!-- Right: Tour Preview -->
            <ScrollViewer Grid.Column="4" Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <views:TourPreviewView />
            </ScrollViewer>
        </Grid>

        <!-- Optional: Busy Overlay -->
        <Grid Background="#7FFFFFFF" Visibility="{Binding IsBusy, Converter={StaticResource VisibleIfTrueConverter}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="Gray" CornerRadius="5">
                <StackPanel Background="WhiteSmoke">
                    <Label Content="{Binding IsBusyText}" Margin="5" />
                    <ProgressBar IsIndeterminate="True" Height="20" Margin="5,0,5,5"/>
                </StackPanel>
            </Border>
        </Grid>

    </DockPanel>
</Window>

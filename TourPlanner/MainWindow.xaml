<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TourPlanner.Views"
        Title="Tour Planner"
        Width="1200" Height="800"
        Background="AliceBlue">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3399CC" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10 5" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <views:TitleBarView DockPanel.Dock="Top"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <views:TourListView Grid.Column="0" Grid.RowSpan="2">
                <views:TourListView.DataContext>
                    <Binding Path="TourListVM" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </views:TourListView.DataContext>
            </views:TourListView>

            <views:TourDetailsView Grid.Column="1" Grid.Row="0">
                <views:TourDetailsView.DataContext>
                    <Binding Path="TourDetailVM" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </views:TourDetailsView.DataContext>
            </views:TourDetailsView>

            <views:TourLogsView Grid.Column="1" Grid.Row="1">
                <views:TourLogsView.DataContext>
                    <Binding Path="TourLogsVM" RelativeSource="{RelativeSource AncestorType=Window}"/>
                </views:TourLogsView.DataContext>
            </views:TourLogsView>
        </Grid>
    </DockPanel>
</Window>
